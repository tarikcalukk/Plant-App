<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/kuharski"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/slika"
        android:layout_width="135dp"
        android:layout_height="183dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/eucaliptus" />

    <TextView
        android:id="@+id/nazivItem"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Naziv biljke R.id.nazivItem"
        app:layout_constraintBottom_toTopOf="@+id/profilOkusaItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/slika"
        app:layout_constraintTop_toTopOf="@+id/slika"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/profilOkusaItem"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Profil okusa R.id.profilOkusaItem"
        app:layout_constraintBottom_toTopOf="@id/jelo2Item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/slika"
        app:layout_constraintTop_toBottomOf="@id/nazivItem"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/jelo1Item"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="6dp"
        android:text="jelo 1"
        app:layout_constraintBottom_toBottomOf="@id/slika"
        app:layout_constraintEnd_toStartOf="@id/jelo2Item"
        app:layout_constraintStart_toEndOf="@id/slika"
        app:layout_constraintTop_toBottomOf="@id/profilOkusaItem"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/jelo2Item"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="jelo 2"
        app:layout_constraintBottom_toBottomOf="@id/slika"
        app:layout_constraintEnd_toStartOf="@id/jelo3Item"
        app:layout_constraintStart_toEndOf="@id/jelo1Item"
        app:layout_constraintTop_toBottomOf="@id/profilOkusaItem"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/jelo3Item"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="jelo 3"
        app:layout_constraintBottom_toBottomOf="@id/slika"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/jelo2Item"
        app:layout_constraintTop_toBottomOf="@id/profilOkusaItem"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>